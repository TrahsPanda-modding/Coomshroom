<?xml version="1.0" encoding="utf-8"?>

<Defs>

  <ThingDef>
    <defName>TRAHS_Plant_Coomshroom</defName>
    <label>Coomshroom</label>
    <description>A fragile mushroom grown from the colony's "used" rags, socks, and towels. While it can grow without sunlight, eating this raw really breaks down a person's will.\n\nThe Coomshroom's cap is dry and flaky, with a slimy, salty inside. The stem is fragile, but similar to the cap it has a very slimy inside and can actually be smoked for a horrible high. It is highly recommended to cook it in order to negate its horrible taste.</description>
    <thingClass>Coomshroom.Plant_Coomshroom</thingClass>
    <statBases>
      <MaxHitPoints>30</MaxHitPoints>
      <Nutrition>0.2</Nutrition>
      <Flammability>0.9</Flammability>
    </statBases>
    <graphicData>
      <texPath>TRAHS/Things/Plant/Coomshroom</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shaderType>CutoutPlant</shaderType>
    </graphicData>
    <ingestible>
      <foodType>Plant</foodType>
      <preferability>RawBad</preferability>
    </ingestible>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <category>Plant</category>
    <altitudeLayer>LowPlant</altitudeLayer>
    <useHitPoints>True</useHitPoints>
    <tickerType>Long</tickerType>
    <neverMultiSelect>True</neverMultiSelect>
    <drawerType>MapMeshOnly</drawerType>
    <pathCostIgnoreRepeat>false</pathCostIgnoreRepeat>
    <plant>
        <sowTags>
            <li>TRAHS_Coombox</li>
            <li>Ground</li>
        </sowTags>
        <harvestedThingDef>TRAHS_RawCoomshroom</harvestedThingDef>
        <harvestYield>8</harvestYield>
        <harvestWork>200</harvestWork>
        <growDays>3</growDays>
        <fertilityMin>0.0</fertilityMin>
        <fertilitySensitivity>0.0</fertilitySensitivity>
        <neverBlightable>true</neverBlightable>
        <dieIfNoSunlight>false</dieIfNoSunlight>
        <maxMeshCount>4</maxMeshCount>
        <sowMinSkill>0</sowMinSkill>
        <sowWork>300</sowWork> <!-- it takes time to "sow" your seeds ;)-->
        <topWindExposure>0.0</topWindExposure>
        <visualSizeRange>0.3~0.6</visualSizeRange>
        <growMinGlow>0.0</growMinGlow>
        <soundHarvesting>Harvest_Standard</soundHarvesting>
        <soundHarvestFinish>Harvest_Standard_Finish</soundHarvestFinish>
    </plant>
  </ThingDef>

</Defs>